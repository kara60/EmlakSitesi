@model IEnumerable<EmlakProject.Models.Ilan>
@{
    ViewBag.Title = "Filter";
}

<div class="container-fluid m-0 p-0">
    <!--Slider-->
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/Content/images/slider-1.bmp" class="d-block w-100" alt="..." style="width:100%; height:600px;">
            </div>
            <div class="carousel-item">
                <img src="/Content/images/slider-1.bmp" class="d-block w-100" alt="..." style="width:100%; height: 600px;">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

    <div class="container-fluid">
        <div class="row mx-5 mt-3">
            @Html.Action("PartialFilter", "Home")
            <div class="col-sm-9">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        var i = 1;
                        <div class="col-sm-3 mb-2">
                            <div class="card" style="width: 18rem;">
                                @foreach (var img in ViewBag.imgs)
                                {
                                    if (img.IlanId == item.IlanId)
                                    {
                                        if (@i == 1)
                                        {
                                            <img src="../Content/images/@img.ImageName" class="card-img-top" style="height:300px;" alt="@img.ImageName">
                                            i++;
                                        }

                                    }
                                }

                                <div class="card-body">
                                    <h5 class="card-title"><strong>@item.Tip.Durum.DurumName</strong> (@item.Tip.TipName)</h5>
                                </div>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">@item.Mahalle.Semt.City.CityName - @item.Mahalle.Semt.SemtName</li>
                                    <li class="list-group-item">
                                        <button class="btn btn-primary w-auto">@item.Alan m<sup>2</sup></button>
                                        <span>-</span>
                                        <button class="btn btn-warning w-auto"><i class="fas fa-bed"></i> @item.NumberOfRooms Oda</button>
                                    </li>
                                </ul>
                                <div class="card-body">
                                    <a class="btn btn-success w-100 mb-1">@item.Price ₺</a>
                                    <a class="btn btn-secondary w-100" href="/Home/Details/@item.IlanId">İlana Git</a>
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>


    </div>
</div>

