@model EmlakProject.Models.Ilan

@{
    ViewBag.Title = "Details";
}

<div class="container p-0 mt-4 mb-5">
    <div class="row">
        <div class="col-md-8 p-0">
            <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">

                <div class="carousel-inner">
                    @{ int i = 0;}
                    @foreach (var item in ViewBag.imgs)
                    {
                        i++;
                        var active = i == 1 ? "active" : "";

                        <div class="carousel-item @active">
                            <img src="/Content/images/@item.ImageName" class="d-block w-100" alt="@item.ImageName" style="width:100%; height:600px;">
                        </div>
                    }

                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
        <div class="col-md-4  pe-3">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th colspan="2" style="text-align:center;">İlan Özellikleri</th>
                    </tr>
                    <tr>
                        <td>
                            <strong>Açıklama</strong>
                        </td>
                        <td>@Model.IlanDescription</td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Fiyat</strong>
                        </td>
                        <td>@Model.Price</td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Durum</strong>
                        </td>
                        <td>@Model.Tip.Durum.DurumName</td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Tip</strong>
                        </td>
                        <td>@Model.Tip.TipName</td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Alan</strong>
                        </td>
                        <td>@Model.Alan</td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Oda Sayısı</strong>
                        </td>
                        <td>@Model.NumberOfRooms</td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Banyo Sayısı</strong>
                        </td>
                        <td>@Model.NumberOfBathrooms</td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Kat</strong>
                        </td>
                        <td>@Model.Floor</td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Adres</strong>
                        </td>
                        <td>@Model.Address</td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Mahalle</strong>
                        </td>
                        <td>@Model.Mahalle.MahalleName</td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Semt</strong>
                        </td>
                        <td>@Model.Mahalle.Semt.SemtName</td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Şehir</strong>
                        </td>
                        <td>@Model.Mahalle.Semt.City.CityName</td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Kredi</strong>
                        </td>
                        <td>
                            @if (@Model.Credit == true)
                            {
                                <label class="text-success"><strong>Evet</strong></label>
                            }
                            else
                            {
                                <label class="text-danger"><strong>Hayır</strong></label>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <strong>Telefon</strong>
                        </td>
                        <td><button class="btn btn-success"><i class="fas fa-phone"></i> @Model.TelNo</button></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!--Slider-->
</div>

