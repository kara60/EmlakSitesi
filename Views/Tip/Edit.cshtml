@model EmlakProject.Models.Tip

@{
    ViewBag.Title = "Edit";
}

<div class="container-fluid">
    <div class="row mx-5 mt-3">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-6 my-5">
            <div class="card p-5 mb-5 mx-auto" style="width:900px;">
                <h3 class="text-warning mx-auto">
                    <i class="fas fa-home"></i>
                    Kara Emlak / Profil
                </h3>

                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin/Index">Admin Sayfası</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Tip Güncelleme</li>
                    </ol>
                    <hr />
                </nav>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.TipId)

                        <div class="form-group">
                            <label class="col-sm-2 control-label fw-bold">Tip Adı:</label>
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TipName, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.TipName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label fw-bold">Durum Adı:</label>
                            <div class="col-md-10">
                                @Html.DropDownList("DurumId", null, htmlAttributes: new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.DurumId, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group mt-2">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Güncelle" class="btn btn-primary" />
                                @Html.ActionLink("Tip Listesi", "Index", null, new { @class = "btn btn-warning" })
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
        <div class="col-sm-3">
        </div>
    </div>
</div>

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Tip</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TipId)

        <div class="form-group">
            @Html.LabelFor(model => model.TipName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TipName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TipName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.DurumId, "DurumId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DurumId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DurumId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
