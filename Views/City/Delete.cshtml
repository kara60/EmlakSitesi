@model EmlakProject.Models.City

@{
    ViewBag.Title = "Delete";
}

<div class="container-fluid">
    <div class="row mx-5 mt-3">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-6 my-5">
            <div class="card p-5 mb-5 mx-auto" style="width:900px;">
                <h3 class="text-dark mx-auto">
                    <i class="fas fa-home"></i>
                    Şehir Silme
                </h3>

                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin/Index">Admin Sayfası</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Şehir Silme</li>
                    </ol>
                    <hr />
                </nav>

                <h3>Bu şehri silmek istediğiniz emin misiniz?</h3>
                <br />
                <div class="row">
                    <div class="col-md-6">
                        <p class="text-dark h4"><strong>Şehir Adı :</strong> @Html.DisplayFor(model => model.CityName)</p>
                    </div>
                    <br />
                    <br />





                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Sil" class="btn btn-danger" />
                            @Html.ActionLink("Şehir Listesi", "Index", null, new { @class = "btn btn-warning" })
                        </div>
                    }
                </div>

            </div>
        </div>
        <div class="col-sm-3">
        </div>
    </div>
</div>
