@model IEnumerable<EmlakProject.Models.Semt>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="row mx-5 mt-3">
        <div class="col-sm-3">
        </div>
        <div class="col-sm-6 my-5">
            <div class="card p-5 mb-5 mx-auto" style="width:900px;">
                <h3 class="text-dark mx-auto">
                    <i class="fas fa-home"></i>
                    Semt Listesi
                </h3>

                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Admin/Index">Admin Sayfası</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Semt Listesi</li>
                    </ol>
                    <hr />
                </nav>
                <a class="btn btn-success btn-block" href="@Url.Action("Create")">Semt Ekle</a>
                <table class="table">
                    <tr>
                        <th>
                            Şehir Adı
                        </th>
                        <th>
                            Semt Adı
                        </th>
                        <th>

                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.City.CityName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SemtName)
                            </td>
                            <td class="d-flex justify-content-end">
                                <a class="btn btn-primary" href="@Url.Action("Edit", new { id = item.SemtId })"><i class="fas fa-edit"></i> Düzenle</a>
                                <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.SemtId })"><i class="fas fa-trash"></i> Sil</a>
                            </td>
                        </tr>
                    }

                </table>

            </div>
        </div>
        <div class="col-sm-3">
        </div>
    </div>
</div>
